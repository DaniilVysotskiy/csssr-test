.checkbox
	margin-bottom 10px
	& > input[type='checkbox']:checked + .label--checkbox::after
		position absolute
		top -10px
		left 4px
		width 20px
		height 20px
		sprite $check
		content ''
.label
	&--checkbox
		padding-left 30px
		display inline-block
		font-size 21px
		color inherit
		&::before
			position absolute
			left 0
			width 20px
			height 20px
			sprite $checkbox
			content ''
